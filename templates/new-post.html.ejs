<div class="container">
  <h1>Create a Post in the topic <%= topic.subject %></h1>
  <form method="POST" action="<%= `/forums/topics/${topic.id}`  %>">
    <div class="error-message">
      <%= errorMessage %>
    </div>

    <div class="form-group">
      <label class="required" for="body">Body</label>
      <textarea name="body" required></textarea>
      <small class="helper-text">
        Create a post about '<%= topic.subject %>'.
      </small>
    </div>
    <div class="form-group">
      <small class="helper-text">
        <span class="required"></span>field is required.
      </small>
    </div>
    <input type="submit" value="Create Post" />
  </form>
</div>
